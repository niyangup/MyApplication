<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <include layout="@layout/title_bar" />

    <FrameLayout
        android:id="@+id/fl_content"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <RadioGroup
        android:id="@+id/rb_group"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#dedede"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <RadioButton
            android:id="@+id/rb_frame"
            style="@style/rb_style"
            android:drawableTop="@drawable/tab_frame_selector"
            android:text="常用框架" />

        <RadioButton
            android:id="@+id/rb_third"
            style="@style/rb_style"
            android:drawableTop="@drawable/tab_third_selector"
            android:text="第三方" />

        <RadioButton
            android:id="@+id/rb_custom"
            style="@style/rb_style"
            android:drawableTop="@drawable/tab_custom_selector"
            android:text="自定义控件" />

        <RadioButton
            android:id="@+id/rb_other"
            style="@style/rb_style"
            android:drawableTop="@drawable/tab_other_selector"
            android:text="其他" />
    </RadioGroup>

</LinearLayout>