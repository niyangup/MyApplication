<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.example.myapplication">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:name=".banner.activity.App"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:networkSecurityConfig="@xml/network_security_config"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.AppCompat.Light.NoActionBar"
        android:usesCleartextTraffic="true"
        tools:ignore="GoogleAppIndexingWarning">


        <activity android:name=".jiecaovideoplayer.activity.JCListViewActivity" />

        <activity
            android:name=".jiecaovideoplayer.activity.JCVideoPlayerActivity"
            android:configChanges="orientation|screenSize|keyboardHidden"
            android:screenOrientation="portrait" />
        <activity
            android:name=".jiecaovideoplayer.activity.ListViewViewpagerActivity"
            android:configChanges="orientation|screenSize|keyboardHidden"
            android:screenOrientation="portrait" />
        <activity
            android:name=".jiecaovideoplayer.activity.ListViewMultiHolderActivity"
            android:configChanges="orientation|screenSize|keyboardHidden"
            android:screenOrientation="portrait" />
        <activity
            android:name=".jiecaovideoplayer.activity.RecyclerViewNormalActivity"
            android:configChanges="orientation|screenSize|keyboardHidden"
            android:screenOrientation="portrait" />
        <activity
            android:name=".jiecaovideoplayer.activity.UISmallChangeActivity"
            android:configChanges="orientation|screenSize|keyboardHidden"
            android:screenOrientation="portrait" />
        <activity
            android:name=".jiecaovideoplayer.activity.WebViewActivity"
            android:configChanges="orientation|screenSize|keyboardHidden"
            android:screenOrientation="portrait" />

        <activity android:name=".jiecaovideoplayer.activity.ListViewNormalActivity" />


        <activity android:name=".banner.activity.BannerMainActivity" />
        <activity android:name=".banner.activity.BannerAnimationActivity" />
        <activity android:name=".banner.activity.BannerStyleActivity" />
        <activity android:name=".banner.activity.IndicatorPositionActivity" />
        <activity android:name=".banner.activity.CustomBannerActivity" />
        <activity android:name=".glide.GlideChangeActivity" />
        <activity android:name=".glide.GlideRecyclerViewActivity" />
        <activity android:name=".glide.GlideBaseActivity" />
        <activity android:name=".glide.GlideActivity" />
        <activity android:name=".recyclerview.RecyclerViewActivity" />
        <activity android:name=".eventbus.EventBusSendActivity" />
        <activity android:name=".eventbus.EventbusActivity" />
        <activity android:name=".butterknife.ButterKnifeActivity" />
        <activity
            android:name=".MainActivity"
            android:configChanges="orientation|screenSize|keyboardHidden" />
        <activity android:name=".SplashActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".okhttp.activity.FrameActivity" />
        <activity android:name=".okhttp.activity.OKHttpImageListActivity" />
        <activity android:name=".json.activity.NativeJsonParseActivity" />
    </application>

</manifest>